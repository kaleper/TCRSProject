<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<BorderPane prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: #403248;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.cosctcrs.OfficerPopUpController">
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <TextFlow prefHeight="100.0" prefWidth="313.0">
               <children>
                  <Label prefHeight="37.0" prefWidth="328.0" text="Officer Search Results for:" textFill="#f2e8cf">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Label>
               </children>
            </TextFlow>
            <Region HBox.hgrow="ALWAYS" />
            <StackPane prefHeight="42.0" prefWidth="115.0">
               <children>
                  <ImageView fitHeight="81.0" fitWidth="80.0" preserveRatio="true">
                     <image>
                        <Image url="@images/Logo.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets left="20.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="255.0" prefWidth="600.0" spacing="20.0">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <children>
            <Label fx:id="label_officer_info" alignment="TOP_LEFT" prefHeight="155.0" prefWidth="471.0" text="Insert search results here. Row will have Officer first name, last  name, title, total number of tickets issued, other statistics if desired can be added" textFill="#f2e8cf" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font></Label>
         </children>
      </VBox>
   </center>
</BorderPane>
